<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="170dp"
              android:background="@color/white"
              android:orientation="vertical">

    <!--Card Image , Definition price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_cart_card_img"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/automotive"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp">

            <TextView

                android:id="@+id/shop_cart_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good Food Gift Card $50.00 Digital (15% OFF)"
                android:maxLines="3"
                android:ellipsize="end"/>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/shop_cart_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textStyle="bold"
                android:text="Delivered via email"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/shop_cart_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$45.50"
                android:gravity="right"
                android:maxLines="2"/>

        </LinearLayout>

    </LinearLayout>



    <!--Quantity ,add remove button, Cancel-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/insurance_green"
                android:text="@string/shop_cart_item_quantity"/>

            <TextView
                android:id="@+id/shop_cart_item_quantity"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/shop_cart_item_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_circle_black_36dp"/>

            <ImageView
                android:id="@+id/shop_cart_item_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_remove_circle_black_36dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/shop_cart_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/icon_delete"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>