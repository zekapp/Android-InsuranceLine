<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            style="@style/ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            />
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <au.com.lumo.ameego.uiUtils.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/detail_card_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/detail_card_type"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </au.com.lumo.ameego.uiUtils.CustomTextInputLayout>

            <au.com.lumo.ameego.uiUtils.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/detail_name_on_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/detail_name_on_card"
                    android:inputType="textCapSentences"
                    />
            </au.com.lumo.ameego.uiUtils.CustomTextInputLayout>

            <au.com.lumo.ameego.uiUtils.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/detail_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/detail_card_number"
                    android:inputType="numberDecimal"
                    android:maxLength="16"
                    />
            </au.com.lumo.ameego.uiUtils.CustomTextInputLayout>

            <au.com.lumo.ameego.uiUtils.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/detail_card_exp_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/detail_card_exp_month"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </au.com.lumo.ameego.uiUtils.CustomTextInputLayout>

            <au.com.lumo.ameego.uiUtils.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/detail_card_exp_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/detail_card_exp_year"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </au.com.lumo.ameego.uiUtils.CustomTextInputLayout>

            <au.com.lumo.ameego.uiUtils.CustomTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/detail_cvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/detail_cvv"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    />
            </au.com.lumo.ameego.uiUtils.CustomTextInputLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/detail_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>