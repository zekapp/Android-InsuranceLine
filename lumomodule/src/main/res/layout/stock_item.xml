<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="2dp"
    android:background="@color/white"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    >
    <!--http://stackoverflow.com/questions/27035647/why-there-is-no-space-between-cardviews-on-lollipop-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/stock_item_tumbnail"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/automotive"
                />

            <TextView
                android:id="@+id/stock_item_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:background="@color/gray_transparent"
                android:padding="3dp"
                android:text="25% Off"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/stock_item_merchname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stock_item_tumbnail"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"/>

        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>


