<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:text="@string/devivery_type_text"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pages_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delivery_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/icon_chevron_down"
            android:gravity="center_vertical"
            android:hint="@string/select_delivery_type"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/card_price"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/icon_chevron_down"
            android:gravity="center_vertical"
            android:hint="@string/select_card_value"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableRight="@drawable/icon_chevron_down"
            android:gravity="center_vertical"
            android:hint="@string/select_quantity"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:visibility="gone">

<!--        <TextView
            android:id="@+id/iten_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="QUANTITY: 1"
            android:textColor="@color/white" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stock_detail_decrease_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:src="@drawable/ic_remove_circle_outline_white_36dp" />

            <ImageView
                android:id="@+id/stock_detail_increase_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_circle_outline_white_36dp" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/stock_detail_add_to_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/lumo_orange_button_bg"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textColor="@color/white" />

<!--    <TextView
        android:id="@+id/stock_detail_add_to_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/stock_detail_view_loc"
        android:textColor="@color/colorPrimaryDark"
        android:visibility="gone" />-->

</LinearLayout>