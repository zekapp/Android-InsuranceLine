<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/devivery_type_text"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/delivery_type"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:drawableRight="@drawable/ic_expand_more_black_36dp"
        android:text="Via Mail"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:padding="7dp"/>

    <TextView
        android:id="@+id/card_value_title"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_value_text"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/card_price"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:drawableRight="@drawable/ic_expand_more_black_36dp"
        android:text="$100"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:padding="7dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/iten_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTITY: 1"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/stock_detail_decrease_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_remove_circle_outline_white_36dp"
                android:layout_marginLeft="7dp"/>

            <ImageView
                android:id="@+id/stock_detail_increase_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_circle_outline_white_36dp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/stock_detail_add_to_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/stock_detail_add_card"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:paddingRight="13dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/stock_detail_view_location"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stock_detail_view_loc"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

</LinearLayout>